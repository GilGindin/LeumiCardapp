<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/app_padding"
    app:cardElevation="@dimen/app_padding"
    app:cardUseCompatPadding="true">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/app_padding">

    <ImageView
    android:id="@+id/itemImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:src="@mipmap/ic_launcher" />

    <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/itemImage"
    android:layout_alignTop="@id/itemImage"
    android:layout_alignRight="@id/itemImage"
    android:layout_alignBottom="@id/itemImage"
    android:gravity="right|bottom"
    android:layout_marginBottom="@dimen/tv_margin_bottom_single_item"
    android:text="picture"
    android:textColor="@android:color/white"
    android:textSize="@dimen/tv_size_in_single_item"
    android:textStyle="bold" />

    <TextView
    android:id="@+id/textview_sTitlle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/itemImage"
    android:layout_alignTop="@id/itemImage"
    android:layout_alignRight="@id/itemImage"
    android:layout_alignBottom="@id/itemImage"
    android:gravity="right|bottom"
    android:layout_below="@+id/tvTitle"
    android:textColor="@android:color/white"
    android:textSize="@dimen/sub_tv_size_in_single_item"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>